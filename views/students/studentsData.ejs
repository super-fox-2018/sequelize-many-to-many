<!DOCTYPE html>
<html>
<head>
<style>
  table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
  }
  td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
      text-align: center
  }
  h1, p{
      text-align: center
  }
</style>
<title>Students</title>
</head>
<body>
<h1>Students Data</h1>
<p><a href ="/student/add">add student</a></p>
<div class="students_table">
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    <% studentsData.forEach(student => { %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.firstName %></td>
        <td><%= student.lastName %></td>
        <td><%= student.email %></td>
        <td><a href = "/students/<%=student.id%>/addSubject">add subject</a></td>
        <td><a href = "/edit/<%=student.id%>">edit</a> || <a href="/delete/<%=student.id%>" onclick = "return confirm('delete this student?')"> delete</a> </td>
      </tr>
    <% })%>
  </tbody>
</table>
</div>
<p><a href ="/">home</a></p>
</body>
</html>