<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
        crossorigin="anonymous">
    <title>Add Subject to Student</title>
</head>

<body>
    <h1>Add Students Data</h1>
    <div>
        <%= message %>
    </div>
    <form action="<%= oriUrl %>" method="POST">
        <table>
            <tr>
                <td>First Name:</td>
                <td>
                    <%= student.firstName %>
                </td>
            </tr>
            <tr>
                <td>Last Name:</td>
                <td>
                    <%= student.lastName %>
                </td>
            </tr>
            <tr>
                <td>Email:</td>
                <td>
                    <%= student.email %>
                </td>
            </tr>
            </table>
            <br>
            <table>
            <tr>
                    <td> Choose Subject: </td>
            </tr>
            <tr>
                    <td> <select name="subjectId">
                            <% subjects.forEach(function(subject){ %>
                                <option value="<%=subject.id %>"><%= subject.nameSubject %></option>
                            <% }) %>
                          </select> 
                    </td>
            </tr>
            <tr>
                <td><input type="submit" value="Add Subject" id="submit" /></td>
            </tr>
        </table>
        </table>
    </form>
</body>

</html>